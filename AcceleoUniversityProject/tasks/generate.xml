<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="AcceleoUniversityProject">
    <property name="ECLIPSE_HOME" value="../../../../../../eclipse/modeling-2024-09/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="AcceleoUniversityProject.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/AcceleoUniversityProject/bin"/>
    </path>

    <path id="AcceleoUniversityProject.classpath">
        <path refid="AcceleoUniversityProject.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="AcceleoUniversityProject.libraryclasspath.alljars">
        <pathelement location="../AcceleoUniversityProject/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="AcceleoUniversityProject.classpath.alljars">
        <path refid="AcceleoUniversityProject.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="AcceleoUniversityProject.main.Generate" classpathref="AcceleoUniversityProject.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="AcceleoUniversityProject.main.Generate" classpathref="AcceleoUniversityProject.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
